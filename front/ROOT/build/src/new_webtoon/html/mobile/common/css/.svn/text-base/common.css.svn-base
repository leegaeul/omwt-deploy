@charset "utf-8";
* {margin:0; padding:0;}
* {-webkit-text-size-adjust:none;}
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,
form,fieldset,input,textarea,p,blockquote,th,td{
	padding:0;
	margin:0;
	border: 0;
	word-wrap:break-word;   word-break:break-all; /*word-break: keep-all;*/
}

html,body {
	width:100%; height:100%;
	font-size:13px;
	line-height:20px;
	color:#2e2e2e;	
}

a{color:#2e2e2e; text-decoration:none;}

table {
	border: 0;
	border-collapse : collapse;
	border-spacing : 0;
}

img{border-style:none;}
ol,ul,li{list-style:none; }


button {border:0 none; padding:0; margin:0; background:transparent; *overflow:visible; cursor:pointer; cursor:pointer;}
button::-moz-focus-inner {border:0; margin:0;}